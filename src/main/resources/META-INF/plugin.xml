<idea-plugin>
    <id>com.yourname.gruvbox.material.island</id>

    <name>Gruvbox Material Island Theme</name>

    <vendor url="https://github.com/yourusername/gruvbox-material-island-theme">Your Name</vendor>

    <description><![CDATA[
      A high-contrast Gruvbox Material theme based on the Islands UI.
      Includes both Dark and Light variants optimized for modern IntelliJ UIs.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <depends optional="true" config-file="plugin-classic-ui.xml">com.intellij.classic.ui</depends>

    <extensions defaultExtensionNs="com.intellij">
        <themeProvider
                id="com.github.nowheremat.gruvbox.dark"
                path="themes/armada-dark/armada-dark.theme.json"
                targetUi="new"
        />

        <themeProvider
                id="com.github.nowheremat.gruvbox.dark.islands"
                path="themes/armada-dark/armada-dark-islands.theme.json"
                targetUi="islands"
        />

    </extensions>

</idea-plugin>